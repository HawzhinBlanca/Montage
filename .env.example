# Copy this file to .env and replace ALL placeholder values with real credentials
# .env is gitignored - NEVER commit real secrets

# ========== AI Provider API Keys - GET NEW KEYS AFTER REVOKING OLD ONES ==========
OPENAI_API_KEY=sk-proj-YOUR_NEW_OPENAI_KEY_HERE
ANTHROPIC_API_KEY=sk-ant-YOUR_NEW_ANTHROPIC_KEY_HERE  
DEEPGRAM_API_KEY=YOUR_NEW_DEEPGRAM_KEY_HERE
GEMINI_API_KEY=YOUR_NEW_GOOGLE_API_KEY_HERE

# ========== Database & Cache ==========
DATABASE_URL=postgresql://user:password@localhost:5432/montage
REDIS_URL=redis://localhost:6379

# ========== Security & Authentication ==========
ALLOWED_API_KEYS=your-secure-api-key-1,your-secure-api-key-2
JWT_SECRET_KEY=your-jwt-secret-minimum-32-chars-here
API_KEY_HASH_SALT=your-unique-salt-here

# ========== Budget Controls ==========
MAX_COST_USD=5.00
BUDGET_ALERT_THRESHOLD=4.00

# ========== Processing Configuration ==========
MAX_CONCURRENT_JOBS=4
TEMP_DIR=/tmp/montage
CACHE_ENABLED=true
MAX_UPLOAD_SIZE_MB=600

# ========== Feature Flags ==========
ENABLE_PREMIUM_SCORING=false
ENABLE_FACE_DETECTION=true
ENABLE_METRICS=true

# ========== External Services ==========
HUGGINGFACE_TOKEN=hf_YOUR_HUGGINGFACE_TOKEN_HERE
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
SENTRY_TRACES_SAMPLE_RATE=0.1

# ========== Environment ==========
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ========== Monitoring ==========
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000